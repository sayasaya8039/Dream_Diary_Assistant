{
  "manifest_version": 3,
  "name": "Dream Diary Assistant",
  "description": "AIベースの夢日記アシスタント - 夢の解釈とイラスト生成",
  "version": "1.2.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Dream Diary Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.stability.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ]
}
